{
  "kind": "collectionType",
  "collectionName": "loan_applications",
  "info": {
    "singularName": "loan-application",
    "pluralName": "loan-applications",
    "displayName": "Loan Application"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "loanType": {
      "type": "string"
    },
    "answers": {
      "type": "json"
    },
    "currentStep": {
      "type": "integer"
    },
    "isComplete": {
      "type": "boolean"
    },
    "score": {
      "type": "integer"
    },
    "grade": {
      "type": "string"
    },
    "applicationStatus": {
      "type": "enumeration",
      "default": "draft",
      "enum": [
        "draft",
        "submitted",
        "under_review",
        "approved",
        "rejected"
      ]
    },
    "loanSlug": {
      "type": "string"
    },
    "supportingDocuments": {
      "type": "component",
      "component": "files.supporting-document",
      "repeatable": true
    }
  }
}
